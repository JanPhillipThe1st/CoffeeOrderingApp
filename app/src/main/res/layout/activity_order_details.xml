<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".OrderDetails"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:gravity="center"
            app:icon="@drawable/baseline_chevron_left_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="30dp"
            app:iconTint="#000000" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="345dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/cherry_cream_soda"
            android:gravity="center"
            android:text="ORDER DETAILS"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="205dp"
            tools:layout_editor_absoluteY="119dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivCoffeePhoto"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:scaleType="fitCenter"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvCoffeeName"
        android:layout_width="345dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:fontFamily="@font/cherry_cream_soda"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="119dp" />
    <TextView
        android:id="@+id/tvCoffeeSize"
        android:layout_width="345dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:fontFamily="@font/cherry_cream_soda"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="119dp" />
    <TextView
        android:id="@+id/tvCoffeeDetails"
        android:layout_width="345dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:fontFamily="@font/cherry_cream_soda"
        android:textColor="#FFFFFF"/>
    <TextView
        android:id="@+id/tvCoffeePrice"
        android:layout_width="345dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:fontFamily="@font/cherry_cream_soda"
        android:textColor="#FFFFFF"/>
    <TextView
        android:layout_width="345dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="ORDER CONFIRMED!\nTHANK YOU FOR ORDERING."
        android:fontFamily="@font/cherry_cream_soda"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="350dp"/>
</LinearLayout>